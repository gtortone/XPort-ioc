record(bo,"$(H):PWR:cmd") {
  field(DESC,"uSOP power control")
  field(SCAN,"Passive")
  field(DTYP,"$(D)")
  field(PINI,"YES")
  field(ZNAM,"OFF")
  field(ONAM,"ON")
  field(OMSL,"supervisory")
  field(DOL,"1")
  field(OUT,"1")
  field(RVAL,"1")
}

record(bi,"$(H):PWR:status") {
  field(DESC,"uSOP power status")
  field(SCAN,"1 second")
  field(DTYP,"$(D)")
  field(PINI,"YES")
  field(ZNAM,"OFF")
  field(ONAM,"ON")
}

record(mbbo,"$(H):BOOT:sel") {
  field(DESC,"uSOP boot mode")
  field(SCAN,"Passive")
  field(DTYP,"$(D)")
  field(PINI,"YES")
  field(OMSL,"supervisory")
  field(ZRVL,"0")
  field(ZRST,"reset")
  field(ONVL,"4")
  field(ONST,"UART0")
  field(TWVL,"8")
  field(TWST,"Ethernet")
  field(THVL,"24")
  field(THST,"microSD")
  field(FRVL,"28")
  field(FRST,"eMMC")
  field(DOL,"1")
  field(OUT,"1")
  field(RVAL,"0")
}

record(mbbi,"$(H):BOOT:status") {
  field(DESC,"uSOP boot status")
  field(SCAN,"1 second")
  field(DTYP,"$(D)")
  field(PINI,"YES")
  field(ZRVL,"0")
  field(ZRST,"reset")
  field(ONVL,"4")
  field(ONST,"UART0")
  field(TWVL,"8")
  field(TWST,"Ethernet")
  field(THVL,"24")
  field(THST,"microSD")
  field(FRVL,"28")
  field(FRST,"eMMC")
}
